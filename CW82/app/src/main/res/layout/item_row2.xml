<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http:// schemas,android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="332dp"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:backgroundTint="#DAD3C8"
    android:rotation="90"

    >


    <RelativeLayout

        android:layout_width="300dp"
        android:layout_height="338dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/radias">


        <TextView
            android:id="@+id/itemNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="-8dp"
            android:text="Leatherette Sofa"
            android:textColor="#3C322C"
            android:textSize="25sp"
            android:transitionName="nameTransition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemNameTxt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="Price: "
            android:textColor="#535353"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/itemNameTxt" />

        <TextView
            android:id="@+id/itemPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemNameTxt"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/price"
            android:text="0.000"
            android:textColor="#3F6900"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/price"
            app:layout_constraintTop_toBottomOf="@+id/itemNameTxt"
            tools2:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="203dp"
            android:layout_height="221dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"

            android:layout_marginEnd="47dp"
            android:layout_marginBottom="12dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:transitionName="imageTransition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chair0" />

        <ImageView
            android:id="@+id/good"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.878"
            app:srcCompat="@drawable/anew2" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>